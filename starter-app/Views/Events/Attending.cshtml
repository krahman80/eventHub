@model starter_app.ViewModels.EventViewModel
@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<main>
    <h2 class="mt-4 mb-3">Attending Events</h2>

    <ul class="list-unstyled">
        @foreach (var item in Model.UpcomingEvents)
        {
            <li>
                <div class="d-flex align-items-center my-4">
                    <div class="flex-shrink-0 text-center">
                        <div class="mx-4">
                            <span class="fs-5 fw-bold">@item.DateTime.ToString("MMM")</span>
                            <br />
                            @item.DateTime.ToString("dd")
                            <br />
                            @item.DateTime.ToString("yyyy")
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <div>
                            <div class="d-flex justify-content-start align-items-center">
                                <h3>@item.Artist.Name</h3>
                                @if (item.isCanceled)
                                {
                                    <h5 class="ms-1 badge rounded-pill bg-warning text-white">Canceled</h5>
                                }
                            </div>
                            <p>@item.Genre.Name</p>
                            <div class="text-sm">
                                <button class="btn btn-info btn-sm fw-normal" style="pointer-events:none">Attending</button>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
        </ul>
</main>