@model starter_app.ViewModels.EventViewModel
@{
    ViewBag.Title = "Attending";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<main>
    <h2 class="mt-4 mb-3">List of Events</h2>

    @foreach (var item in Model.AttendingEvent)
    {
        <div class="d-flex align-items-center my-4">
            <div class="flex-shrink-0 text-center">
                <div class="mx-4">
                    <span class="fs-5 fw-bold">@item.DateTime.ToString("MMM")</span>
                    <br />
                    @item.DateTime.ToString("dd")
                    <br />
                    @item.DateTime.ToString("yyyy")
                </div>
            </div>
            <div class="flex-grow-1 ms-3">
                <div>
                    <a href="#" class="link-secondary text-decoration-none">
                        <h3>@item.Artist.Name</h3>
                    </a>
                    <p>@item.Genre.Name</p>
                    <div class="text-sm">
                        <span class="badge bg-primary fw-normal">Attending</span>
                    </div>
                </div>
            </div>
        </div>
    }
</main>